<?xml version="1.0" encoding="utf-8"?>
<LexScheme xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="scheme.xsd">
  <Author>Quantum Whale</Author>
  <Name>Mozart Oz language</Name>
  <Desc>Syntax Scheme for Mozart Oz Language</Desc>
  <Copyright>Copyright Quantum Whale, 2003</Copyright>
  <FileExtension></FileExtension>
  <FileType>mozart</FileType>
  <Version>1.1</Version>
  <Styles>
    <Style>
      <Name>idents</Name>
      <ForeColor>ControlText</ForeColor>
      <Index>0</Index>
    </Style>
    <Style>
      <Name>numbers</Name>
      <ForeColor>ControlText</ForeColor>
      <Index>1</Index>
    </Style>
    <Style>
      <Name>reswords</Name>
      <ForeColor>Purple</ForeColor>
      <Index>2</Index>
    </Style>
    <Style>
      <Name>comments</Name>
      <ForeColor>Maroon</ForeColor>
      <Index>3</Index>
      <PlainText>true</PlainText>
    </Style>
    <Style>
      <Name>nested_comments</Name>
      <ForeColor>Green</ForeColor>
      <Index>4</Index>
    </Style>
    <Style>
      <Name>strings</Name>
      <ForeColor>Silver</ForeColor>
      <Index>5</Index>
    </Style>
    <Style>
      <Name>whitespace</Name>
      <Index>6</Index>
    </Style>
  </Styles>
  <States>
    <State>
      <Name>normal</Name>
      <CaseSensitive>false</CaseSensitive>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>ident</Name>
          <LexStyle>0</LexStyle>
          <LeaveState>0</LeaveState>
          <ResWordSets>
            <ResWordSet>
              <Name />
              <Index>0</Index>
              <ResWordStyle>2</ResWordStyle>
              <ResWords>
                <word>andthen</word>
                <word>at</word>
                <word>attr</word>
                <word>case</word>
                <word>catch</word>
                <word>choice</word>
                <word>class</word>
                <word>cond</word>
                <word>declare</word>
                <word>define</word>
                <word>dis</word>
                <word>div</word>
                <word>else</word>
                <word>elsecase</word>
                <word>elseif</word>
                <word>end</word>
                <word>export</word>
                <word>fail</word>
                <word>false</word>
                <word>feat</word>
                <word>finally</word>
                <word>from</word>
                <word>fun</word>
                <word>functor</word>
                <word>if</word>
                <word>import</word>
                <word>in</word>
                <word>local</word>
                <word>lock</word>
                <word>meth</word>
                <word>mod</word>
                <word>not</word>
                <word>of</word>
                <word>or</word>
                <word>orelse</word>
                <word>prepare</word>
                <word>proc</word>
                <word>prop</word>
                <word>raise</word>
                <word>require</word>
                <word>self</word>
                <word>skip</word>
                <word>then</word>
                <word>thread</word>
                <word>true</word>
                <word>try</word>
                <word>unit</word>
              </ResWords>
            </ResWordSet>
          </ResWordSets>
          <Expressions>
            <string>[a-zA-Z_][a-zA-Z0-9_]*</string>
          </Expressions>
          <Index>0</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>\%.*</string>
          </Expressions>
          <Index>1</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment2</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>1</LeaveState>
          <Expressions>
            <string>/\*</string>
          </Expressions>
          <Index>2</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>string</Name>
          <LexStyle>5</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>"[^"]*"</string>
            <string>'[^']*'</string>
          </Expressions>
          <Index>3</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>whitespace</Name>
          <LexStyle>6</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>(\s)+</string>
          </Expressions>
          <Index>4</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>number</Name>
          <LexStyle>1</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>([0-9]+\.[0-9]*(e|E)(\+|\~)?[0-9]+)|([0-9]+\.[0-9]*)|(0x[0-9a-fA-F]+)|([0-9]+)</string>
          </Expressions>
          <Index>5</Index>
        </SyntaxBlock>
      </SyntaxBlocks>
      <Index>0</Index>
    </State>
    <State>
      <Name>comment</Name>
      <CaseSensitive>false</CaseSensitive>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>comment11</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>\*/</string>
          </Expressions>
          <Index>0</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment12</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>2</LeaveState>
          <Expressions>
            <string>/\*</string>
          </Expressions>
          <Index>1</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment13</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>1</LeaveState>
          <Expressions>
            <string>((?!(\*/|/\*)).)+</string>
          </Expressions>
          <Index>2</Index>
        </SyntaxBlock>
      </SyntaxBlocks>
      <Index>1</Index>
    </State>
    <State>
      <Name>nested_comment</Name>
      <CaseSensitive>false</CaseSensitive>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>comment21</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>1</LeaveState>
          <Expressions>
            <string>\*/</string>
          </Expressions>
          <Index>0</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment22</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>2</LeaveState>
          <Expressions>
            <string>((?!\*/).)+</string>
          </Expressions>
          <Index>1</Index>
        </SyntaxBlock>
      </SyntaxBlocks>
      <Index>2</Index>
    </State>
  </States>
</LexScheme>